{
  "name": "eslint-plugin-nestjs-apex",
  "version": "0.0.1",
  "description": "ESLint rules for APEX",
  "scripts": {
    "clean": "rm -Rf ./dist/",
    "build:ci": "npm run build",
    "build": "npm run clean && mkdir ./dist && tsc --project tsconfig.build.json",
    "lint": "npx eslint -c .eslintrc.js --ext .ts './src/**/*.ts' './tests/**/*.ts' --no-error-on-unmatched-pattern",
    "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && npx jest --runInBand --color --reporters=default --no-cache --coverage=false --silent=false -c jest.config.ts",
    "pre-commit": "npx lint-staged",
    "prettier": "prettier --write src/*",
    "prepare": "husky install",
    "release": "npx semantic-release",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/egilkh/eslint-plugin-nestjs-apex.git"
  },
  "engines": {
    "node": "^18"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "main": "dist/index.js",
  "types": "index.d.ts",
  "dependencies": {
    "@typescript-eslint/scope-manager": "6.15.0",
    "@typescript-eslint/utils": "6.15.0",
    "eslint-module-utils": "2.8.0",
    "reflect-metadata": "0.2.1",
    "v18": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@types/eslint": "8.44.9",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "@typescript-eslint/rule-tester": "6.15.0",
    "class-validator": "^0.14",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "46.9.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "49.0.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-create-mock-instance": "2.0.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.1",
    "prettier": "3.1.1",
    "semantic-release": "22.0.12",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^6.0.0",
    "class-validator": "*",
    "eslint": "^8.0.0"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "nestjs",
    "linter",
    "lint",
    "style"
  ],
  "license": "ISC",
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write"
  }
}
